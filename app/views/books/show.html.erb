<p id="notice"><%= notice %></p>

<p>
  <strong>Book title:</strong>
  <%= @book.book_title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Blurb:</strong>
  <%= @book.blurb %>
</p>

<p>
  <strong>Price:</strong>
  <%= @book.price %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @book.condition %>
</p>
<p>
<%= image_tag @book.picture if @book.picture.attached?%>
</p>
<div class="show-edit-delete">
   <% if can? :edit, @book %>
     <%= link_to "Edit", edit_book_path(@book.id) %>
     <%= link_to "Delete", book_path(@book.id), method: :delete %>
   <% end %>
   <%= link_to "Back", :back %>
 </div>
